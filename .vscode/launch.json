{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Run C++ via /tmp (clean)",
        "type": "cppdbg",
        "request": "launch",
        "program": "/tmp/${fileBasenameNoExtension}",
        "args": [],
        "stopAtEntry": false,
        "cwd": "${fileDirname}",
        "environment": [],
        "externalConsole": false,
        "preLaunchTask": "Compile and Run in /tmp",
        "miDebuggerPath": "/usr/bin/lldb",  // or gdb if you're using it
        "setupCommands": [
          {
            "description": "Enable pretty-printing",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ]
      }
    ]
  }
  